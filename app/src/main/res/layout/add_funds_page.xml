<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AddFundsPage">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="407dp"
        android:layout_height="136dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            app:srcCompat="@drawable/chief" />

        <LinearLayout
            android:id="@+id/options"
            android:layout_width="419dp"
            android:layout_height="136dp"
            android:layout_marginTop="16dp"

            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/covesb"
                android:text=" Name Lastname"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/covesb"
                android:text="  Username"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fundsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/covesb"
                    android:text="  Total Balance:"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/funds"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/covesb"
                    android:text="  0.00"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="376dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoJG"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/border"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:fontFamily="@font/covesb"
            android:gravity="center"
            android:text="Add Funds"

            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="464dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <androidx.cardview.widget.CardView
            android:id="@+id/addFundsView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkPassword">


            <RelativeLayout
                android:id="@+id/addFundsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/addFunds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/covesb"
                    android:text="Add Funds"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titleText6"
            android:layout_width="217dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="17dp"
            android:layout_weight="0.4"
            android:fontFamily="@font/covesb"

            android:gravity="center"
            android:text="Select payment method"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleText7"
            android:layout_width="292dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"

            android:layout_weight="0.4"

            android:fontFamily="@font/covesb"
            android:text="Introduce the amount to be added"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/titleText8"
            android:layout_width="321dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"

            android:layout_weight="0.4"

            android:fontFamily="@font/covesb"
            android:text="Introduce your password for verification"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountToBeAdded" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="33dp"
            app:layout_constraintEnd_toStartOf="@+id/titleText6"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/morefunds" />

        <ImageView
            android:id="@+id/paypalButton"
            android:layout_width="57dp"
            android:layout_height="33dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toEndOf="@+id/visaButton"
            app:layout_constraintTop_toBottomOf="@+id/titleText6"
            app:srcCompat="@drawable/paypal" />

        <ImageView
            android:id="@+id/bnbButton"
            android:layout_width="57dp"
            android:layout_height="33dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toEndOf="@+id/paypalButton"
            app:layout_constraintTop_toBottomOf="@+id/titleText6"
            app:srcCompat="@drawable/bnb" />

        <ImageView
            android:id="@+id/visaButton"
            android:layout_width="57dp"
            android:layout_height="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintEnd_toStartOf="@+id/paypalButton"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/titleText6"
            app:srcCompat="@drawable/visa" />

        <EditText
            android:id="@+id/amountToBeAdded"
            android:layout_width="210dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:drawableLeft="@drawable/ic_add"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText7" />

        <EditText
            android:id="@+id/checkPassword"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:drawableLeft="@drawable/ic_action_key"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>