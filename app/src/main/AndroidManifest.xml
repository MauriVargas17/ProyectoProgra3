<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eabmodel.juegazosgabazo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_jgicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_jgicon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JuegazosGabazo">
        <activity android:name=".activities.MyOrdersPage"></activity>
        <activity android:name=".activities.Settings" />
        <activity android:name=".activities.AddFundsPage" />
        <activity android:name=".activities.ProductPage" />
        <activity android:name=".adapters.ShopwindowAdapter" />
        <activity android:name=".activities.LoginPage" />
        <activity android:name=".activities.SplashPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Shopwindow"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.Profile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.CartPage"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.RegisterPage" />
    </application>

</manifest>