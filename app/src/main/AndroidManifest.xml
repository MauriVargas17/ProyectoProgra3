<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eabmodel.juegazosgabazo">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_jgicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_jgicon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JuegazosGabazo">
        <activity android:name=".ShopwindowAdapter"></activity>

        <activity android:name=".LoginPage" />
        <activity android:name=".SplashPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Shopwindow"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Profile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Interactions"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".RegisterPage" />
    </application>

</manifest>